@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Numarası</label>
    <input type="text" asp-for="StaffID" class="form-control" readonly/>
    <br />
    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Personel Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Sosyal Media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />
    <label>Sosyal Media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />
    <label>Sosyal Media 3</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
</form>

